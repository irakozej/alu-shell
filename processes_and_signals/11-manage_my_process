#!/usr/bin/env bash
# This script manages the manage_my_process script

# Check if the correct number of arguments is provided
if [ "$#" -ne 1 ]; then
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
fi

# Define the path to the manage_my_process script
process_script="/path/to/manage_my_process"

# Define the PID file path
pid_file="/var/run/my_process.pid"

# Function to start the process
start_process() {
    if [ -f "$pid_file" ]; then
        echo "Error: manage_my_process is already running."
        exit 1
    fi

    # Start the manage_my_process script in the background
    "$process_script" &
    pid="$!"

    # Save the PID to the PID file
    echo "$pid" > "$pid_file"

    echo "manage_my_process started"
}

# Function to stop the process
stop_process() {
    if [ -f "$pid_file" ]; then
        pid=$(cat "$pid_file")
        rm "$pid_file"
        kill "$pid"
        echo "manage_my_process stopped"
    else
        echo "Error: manage_my_process is not running."
        exit 1
    fi
}

# Function to restart the process
restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

# Parse the command-line argument
case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

